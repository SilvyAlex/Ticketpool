doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // bootstrap css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css", rel="stylesheet")
    // bootstrap js and popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js")  
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
  body
    main.form-signin.w-100.m-auto
      form
        h2 Ticketpool
        h1.h3.mb-3.fw-normal Registrate 
        .form-floating
          input#floatingInput.form-control(type='name', placeholder='nombre')
          label(for='floatingInput') Nombre
        .form-floating
          input#floatingInput.form-control(type='lastname', placeholder='apellido')
          label(for='floatingInput') Apellido 
        .form-floating
          input#floatingInput.form-control(type='email', placeholder='name@example.com')
          label(for='floatingInput') Email address
        .form-floating
          input#floatingPassword.form-control(type='password', placeholder='Password')
          label(for='floatingPassword') Password
        .form-check.text-start.my-3
          input#flexCheckDefault.form-check-input(type='checkbox', value='remember-me')
          label.form-check-label(for='flexCheckDefault')
            | Remember me
        button.btn.btn-primary.w-100.py-2(href='http://localhost:3000') Sign in
        p.mt-5.mb-3.text-body-secondary &copy; 2017&ndash;2023