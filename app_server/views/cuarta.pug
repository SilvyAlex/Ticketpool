doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // bootstrap css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css", rel="stylesheet")
    // bootstrap js and popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js")  
    link(rel='icon', href='/images/logo.png', type='image/x-icon')
  body
    header.p-3.text-bg-dark
      .container
        .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
          a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none(href='/')
            svg.bi.me-2(width='40', height='32', role='img', aria-label='Bootstrap')
              use(xlink:href='#bootstrap')
          ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
            li
              a.nav-link.px-2.text-white(href='#')
              h2 Ticketpool
          form.col-12.col-lg-auto.mb-3.mb-lg-0.me-lg-3(role='search')
            input.form-control.form-control-dark.text-bg-dark(type='search', placeholder='Search...', aria-label='Search')
          .text-end
            button.btn.btn-outline-light.me-2(href='/registro') Login
            button.btn.btn-outline-danger(href='/registro') Sign in

      img.img-fluid(src=evento.imagen, alt=evento.nombre)

      .row.g-5
        .col-md-8
          .card.bg-light.p-4.rounded.shadow-lg
            .col-lg-8.pt-4.pt-lg-0.content(data-aos='fade-left')
              h3= evento.nombre
              p.fst-italic= evento.introduccion
              .row
                .col-lg-6
                  ul
                    li
                      i.bi.bi-chevron-right
                      |  
                      strong Fecha:
                      |  
                      span= evento.fecha
                    li
                      i.bi.bi-chevron-right
                      |  
                      strong Ubicación:
                      |  
                      span= evento.ubicacion
                    li
                      i.bi.bi-chevron-right
                      |  
                      strong Género:
                      |  
                      span= evento.genero
                    li
                      i.bi.bi-chevron-right
                      |  
                      strong Redes:
                      |  
                      span= evento.redes
              p= evento.descripcion
          
          
              h3 Tus entradas 
              table.table
                thead
                  tr
                    th Localidad
                    th Precio
                    th Cantidad
                tbody
                  tr 
                    td General 
                    td $20
                    td 2
                tfoot
                  tr
                    td 
                    th Subtotal
                    td $40
            
        .row.g-5
          .col-md-7.col-lg-8
            h4.mb-3 Datos de Compra
            form.bg-dark.p-4.rounded.shadow-lg.needs-validation(action="/cuarta", method="post", role="form")
              .row.g-3
                .col-sm-6
                  label.form-label(for='validationCustom01') Nombre
                  input#firstName.form-control.form-control-lg(type='text', placeholder='', name='nombre', required='true')
                  .invalid-feedback
                    | Nombre requerido.
                .col-sm-6
                  label.form-label(for='validationCustom02') Apellido
                  input#lastName.form-control.form-control-lg(type='text', placeholder='', name='apellido', required='true')
                  .invalid-feedback
                    | Apellido requerido.
                .col-12
                  label.form-label(for='validationCustom03')
                    | Email 
                    span.text-muted (obligatorio)
                  input#email.form-control.form-control-lg(type='email', placeholder='nombre@gmail.com', name='email', required='true')
                  .invalid-feedback
                    | Email requerido.
                .col-md-5
                  label.form-label(for='validationCustom04') País
                  select#country.form-select.form-select-lg(name='pais', required='true')
                    option(value='') Elegir..
                    option Ecuador 
                  .invalid-feedback
                    | Please select a valid country.
                .col-md-4
                  label.form-label(for='validationCustom05') Ciudad
                  select#state.form-select.form-select-lg(name='ciudad', required='true')
                    option(value='') Elegir..
                    option Ambato
                    option Guayaquil
                    option Quito
                    option Cuenca
                    option Latacunga
                    option Baños
                  .invalid-feedback
                    | Please provide a valid state.
              
              hr.my-4
              h4.mb-3 Opciones de Pago 
              .my-3
                .form-check
                  input#credit.form-check-input(type='radio', checked='', name='metodo', required='true')
                  label.form-check-label(for='credit') Tarjeta de Crédito
                .form-check
                  input#debit.form-check-input(type='radio', name='metodo', required='true')
                  label.form-check-label(for='debit') Tarjeta de Débito
                .form-check
                  input#paypal.form-check-input(type='radio', name='metodo', required='true')
                  label.form-check-label(for='paypal') PayPal
                .form-check
                  input#applepay.form-check-input(type='radio', name='metodo', required='true')
                  label.form-check-label(for='applepay') ApplePay
              .row.gy-3
                .col-md-6
                  label.form-label(for='cc-name') Nombre de la tarjeta
                  input#cc-name.form-control.form-control-lg(type='text', placeholder='', name='tarjeta', required='true')
                  small.text-muted Nombre completo que está en la tarjeta
                  .invalid-feedback
                    | Nombre de la tarjeta requerido 
                .col-md-6
                  label.form-label(for='cc-number') Número de la tarjeta
                  input#cc-number.form-control.form-control-lg(type='text', placeholder='', name='numero', required='true')
                  .invalid-feedback
                    | Número de la tarjeta requerido
                .col-md-3
                  label.form-label(for='cc-expiration') Fecha de vencimiento
                  input#cc-expiration.form-control.form-control-lg(type='text', placeholder='', name='vence', required='true')
                  .invalid-feedback
                    | Fecha de vencimiento requerido 
                .col-md-3
                  label.form-label(for='cc-cvv') CVV
                  input#cc-cvv.form-control.form-control-lg(type='text', placeholder='', name='cvv', required='true')
                  .invalid-feedback
                    | Código de seguridad requerido 
                  input#cc-cvv.form-control.form-control-lg(type='hidden', placeholder='', name='id_evento', value= evento._id)
              hr.my-4
              button(type='submit') Comprar

          
          
          
    //Fotter
    .container
      footer.d-flex.flex-wrap.justify-content-between.align-items-center.py-3.my-4.border-top
        .col-md-4.d-flex.align-items-center
          a.mb-3.me-2.mb-md-0.text-body-warning.text-decoration-none.lh-1(href='/')
          span.mb-3.mb-md-0.text-body-warning &copy; 2023 Desarrollo Web 3
        ul.nav.col-md-4.justify-content-end.list-unstyled.d-flex
          li.ms-3
            a.text-body-warning(href='#')
              svg.bi(width='24', height='24')
                use(xlink:href='#twitter')
          li.ms-3
            a.text-body-warning(href='#')
              svg.bi(width='24', height='24')
                use(xlink:href='#instagram')
          li.ms-3
            a.text-body-warning(href='#')
              svg.bi(width='24', height='24')
                use(xlink:href='#facebook')
    