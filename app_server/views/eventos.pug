doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // bootstrap css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css", rel="stylesheet")
    // bootstrap js and popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js")  
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
  body
    header.p-3.text-bg-dark
      .container
        .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
          a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none(href='/')
            svg.bi.me-2(width='40', height='32', role='img', aria-label='Bootstrap')
              use(xlink:href='#bootstrap')
          ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
            li
              a.nav-link.px-2.text-white(href='#')
              h2#pageTitle Ticketpool

    main.form-signin.w-100.m-auto
      form.row.g-3.needs-validation.bg-light.p-4.rounded.shadow-lg(action, method="post", role="form")
        .col-md-4
          label.form-label(for='validationCustom01') Imagen
          input#validationCustom01.form-control.form-control-lg(type='text', name='imagen', required='true')
          .valid-feedback
            | Looks good!
        .col-md-4
          label.form-label(for='validationCustom01') Nombre del evento
          input#validationCustom01.form-control.form-control-lg(type='text', name='nombre', required='true')
          .valid-feedback
            | Looks good!
        .col-md-4
          label.form-label(for='validationCustom02') Introducción evento
          input#validationCustom02.form-control.form-control-lg(type='text', name='introduccion', required='')
          .valid-feedback
            | user@gmail.com!
        .col-md-6
          label.form-label(for='validationCustom03') Fecha
          input#validationCustom03.form-control.form-control-lg(type='text', name='fecha', required='')
          .invalid-feedback
            | Ciudad de su preferencia.
        .col-md-4
          label.form-label(for='validationCustom01') Ubicación
          input#validationCustom01.form-control.form-control-lg(type='text', name='ubicacion', required='true')
          .valid-feedback
            | Looks good!
        .col-md-4
          label.form-label(for='validationCustom01') Genero
          input#validationCustom01.form-control.form-control-lg(type='text', name='genero', required='true')
          .valid-feedback
            | Looks good!
        .col-md-4
          label.form-label(for='validationCustom01') Redes
          input#validationCustom01.form-control.form-control-lg(type='text', name='redes', required='true')
          .valid-feedback
            | Looks good!
        .col-md-4
          label.form-label(for='validationCustom01') Descripcion del evento
          input#validationCustom01.form-control.form-control-lg(type='text', name='descripcion', required='true')
          .valid-feedback
            | Looks good!
        .col-md-4
          label.form-label(for='validationCustom01') Fotos adicionales
          input#validationCustom01.form-control.form-control-lg(type='text', name='fotos', required='true')
          .valid-feedback
            | Looks good!
        .col-12
          //a.btn.btn-danger.btn-lg(href='/index') Crear evento
          button.btn.btn-danger.btn-lg(type='submit') Crear evento
          
        .d-grid.gap-2.d-md-flex.justify
          a.btn.btn-danger.me-md-2(href='/') Volver