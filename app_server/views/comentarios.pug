doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // bootstrap css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css", rel="stylesheet")
    // bootstrap js and popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js")  
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
  body
    header.p-3.text-bg-dark
      .container
        .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
          a.d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none(href='/')
            svg.bi.me-2(width='40', height='32', role='img', aria-label='Bootstrap')
              use(xlink:href='#bootstrap')
          ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
            li
              a.nav-link.px-2.text-white(href='#')
              h2#pageTitle Ticketpool


    form.row.g-3.needs-validation.bg-light.p-4.rounded.shadow-lg(action, method="post", role="form")
      .col-md-4
        label.form-label(for='validationCustom01') Correo
        input#validationCustom02.form-control.form-control-lg(placeholder='nombre@gmail.com', type='text', name='correo', required='')
        .valid-feedback
          | user@gmail.com!
      .col-md-4
        label.form-label(for='validationCustom02') Comentario
        textarea#floatingTextarea2.form-control(placeholder='Deja tu comentario', style='height: 100px')
      
      .col-12
       a.btn.btn-danger.btn-lg(href='/') Registrar

      .d-grid.gap-2.d-md-flex.justify
        a.btn.btn-danger.me-md-2(href='/') Volver