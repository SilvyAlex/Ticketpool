extends layout

block content
  head
    title Entrar | Ticketpool
    link(rel='stylesheet', href='/stylesheets/style.css')
    // bootstrap css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css", rel="stylesheet")
    // bootstrap js and popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js")  
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
    
  main.flex-shrink-0
    .container
      h1.mt-5 Users
      hr(style='background-color: black;')

      .row.g-3
        .col-md-2
        .col-md-8
          h1.text-center #{title}
          .card
            .card-body
              form.row.g-3.needs-validation(action, method="post", role="form")
                .col-md-4
                  label.form-label(for='validationCustom01') Nombre
                  input#validationCustom01.form-control(type='text', name='nombre', value=nombre, readonly='',)
                  .valid-feedback
                    | Looks good!
                .col-md-4
                  label.form-label(for='validationCustom02') Correo
                  input#validationCustom02.form-control(type='text', name='correo', value=correo, readonly='',)
                  .valid-feedback
                    | user@gmail.com!
                .col-md-6
                  label.form-label(for='validationCustom03') Ciudad
                  input#validationCustom03.form-control(type='text', name='ciudad', value=ciudad, readonly='', )
                  .invalid-feedback
                    | Ciudad de su preferencia.
                .col-md-3
                  label.form-label(for='validationCustom04') Intereses
                  select#validationCustom04.form-select(name='intereses', value=intereses, readonly='',)
                    option(selected='', disabled='', value='') Elija...
                    option Arte
                    option Cine 
                    option Lectura
                  .invalid-feedback
                    | Please select a valid state.
                .col-md-3
                  label.form-label(for='validationCustom05') Edad
                  input#validationCustom05.form-control(type='text', name='edad', value=edad, readonly='',)
                  .invalid-feedback
                    | Su edad.
                .col-12
                  button.btn.btn-danger(type='submit') Eliminar Usuario
          // Inicia el contenido del footer
  footer.footer.mt-auto.py-3.bg-light.fixed-bottom
    .container
      span.text-muted #{mensaje}



      